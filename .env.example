# Node.js Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=db
DB_PORT=5432
DB_NAME=my_database
DB_USER=postgres
DB_PASSWORD=postgres

# Postgres Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=my_database

# Security
JWT_SECRET=your_jwt_secret_change_in_production
SECRET_WORD=your_secret_word_change_in_production

# CORS Configuration (allows frontend to access backend)
CORS_ORIGIN=http://localhost:5173

# Frontend Configuration (browser-side URL)
# For Docker Compose: Use localhost:3000 (browser accesses via port forwarding)
# For manual setup: Use localhost:3000 (browser accesses directly)
VITE_API_URL=http://localhost:3000
