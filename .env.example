# Node.js Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=db
DB_PORT=5432
DB_NAME=my_database
DB_USER=postgres
DB_PASSWORD=postgres

# Postgres Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=my_database

# Security
JWT_SECRET=your_jwt_secret_change_in_production
SECRET_WORD=your_secret_word_change_in_production

# CORS Configuration (allows frontend to access backend)
# For Docker dev profile, use '*' or 'http://frontend:5173'
# For manual setup, use 'http://localhost:5173'
CORS_ORIGIN=*

# Frontend Configuration
# For Docker dev profile, use service name 'app'
# For manual setup (running frontend/backend separately), use 'localhost'
VITE_API_URL=http://app:3000
